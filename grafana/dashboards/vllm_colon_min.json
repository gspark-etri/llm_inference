{
  "title": "LLM Serving \u2022 vLLM + GPU (colon metrics)",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "TTFT avg (s)",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(vllm:time_to_first_token_seconds_sum[1m]) / rate(vllm:time_to_first_token_seconds_count[1m])",
          "legendFormat": "avg TTFT",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "TPOT avg (s/token)",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(vllm:time_per_output_token_seconds_sum[1m]) / rate(vllm:time_per_output_token_seconds_count[1m])",
          "legendFormat": "avg TPOT",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "E2E latency (p95, s)",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(vllm:e2e_request_latency_seconds_bucket[1m])))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Token throughput (gen tokens/s)",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(vllm:generation_tokens_total[1m])",
          "legendFormat": "TPS",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "GPU Power (W) per GPU",
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "DCGM_FI_DEV_POWER_USAGE",
          "legendFormat": "gpu {{gpu}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "GPU Utilization (%) per GPU",
      "gridPos": {
        "x": 12,
        "y": 16,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "DCGM_FI_DEV_GPU_UTIL",
          "legendFormat": "gpu {{gpu}}",
          "refId": "A"
        }
      ]
    }
  ],
  "templating": {
    "list": []
  }
}